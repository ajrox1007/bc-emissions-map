// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// For Turso/LibSQL in production, set these environment variables in Vercel:
// TURSO_DATABASE_URL=libsql://your-db-name-your-username.turso.io
// TURSO_AUTH_TOKEN=your-auth-token

model Community {
  id              String   @id @default(uuid())
  orgUnit         String   @unique
  orgName         String
  latitude        Float?
  longitude       Float?
  totalEmissions  Float    @default(0)
  resEmissions    Float    @default(0)
  csmiEmissions   Float    @default(0)
  mixedEmissions  Float    @default(0)
  // Connection counts per sector
  resConnections  Int      @default(0)
  csmiConnections Int      @default(0)
  mixedConnections Int     @default(0)
  totalConnections Int     @default(0)
  // Emissions by energy type
  electricEmissions Float   @default(0)
  gasEmissions      Float   @default(0)
  oilEmissions      Float   @default(0)
  propaneEmissions  Float   @default(0)
  woodEmissions     Float   @default(0)
  otherEmissions    Float   @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  emissionsData EmissionsData[]

  @@index([orgName])
  @@index([totalEmissions])
}

model EmissionsData {
  id          String   @id @default(uuid())
  communityId String
  source      String
  energyType  String
  subSector   String   // Res, CSMI, MIXED
  consumption Float
  connections Int?
  emissions   Float
  year        Int
  createdAt   DateTime @default(now())

  community   Community @relation(fields: [communityId], references: [id])

  @@index([communityId])
  @@index([subSector])
  @@index([year])
}

// BC Major Projects Inventory
model MajorProject {
  id                    String   @id @default(uuid())
  projectId             Int      @unique  // Original PROJECT_ID from MPI
  name                  String
  description           String?
  estimatedCost         Float    // In millions CAD
  updateActivity        String?
  constructionType      String   // Infrastructure, Residential, Institutional, Industrial, Commercial
  constructionSubtype   String?
  projectType           String   // Utilities, Residential, Commercial, etc.
  region                String
  municipality          String?
  latitude              Float?
  longitude             Float?
  developer             String
  architect             String?
  projectStatus         String   // Construction started, Proposed, Completed, On hold
  projectStage          String?
  categoryName          String?
  publicFunding         Boolean  @default(false)
  provincialFunding     Boolean  @default(false)
  federalFunding        Boolean  @default(false)
  municipalFunding      Boolean  @default(false)
  otherPublicFunding    Boolean  @default(false)
  greenBuilding         Boolean  @default(false)
  cleanEnergy           Boolean  @default(false)
  indigenous            Boolean  @default(false)
  startDate             String?
  completionDate        String?
  telephone             String?
  firstEntryDate        DateTime?
  lastUpdate            DateTime?
  createdAt             DateTime @default(now())

  @@index([projectStatus])
  @@index([constructionType])
  @@index([developer])
  @@index([estimatedCost])
  @@index([region])
}
